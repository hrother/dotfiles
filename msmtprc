# msmtp config file

account gmail
host smtp.gmail.com
port 587
protocol smtp
auth on
from hrother.public@gmail.com
user hrother.public@gmail.com
tls on
tls_certcheck on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.tmp/msmtp_gmail.log

account rbg
host mail.rbg.informatik.tu-darmstadt.de
port 587
protocol smtp
auth on
from h_rother@rbg.informatik.tu-darmstadt.de
user h_rother@rbg.informatik.tu-darmstadt.de
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_min_dh_prime_bits 512
logfile ~/.tmp/msmtp_rbg.log

account holger_jfranken
host smtp.jfranken.de
port 465
protocol smtp
auth on
from holger@jfranken.de
user hrother
tls on
tls_starttls off
tls_trust_file /etc/ssl/certs/jfranken.crt
logfile ~/.tmp/msmtp_jfranken.log

account registration_hrother
host smtp.jfranken.de
port 465
protocol smtp
auth on
from registration@hrother.org
user hrother
tls on
tls_starttls off
tls_trust_file /etc/ssl/certs/jfranken.crt
logfile ~/.tmp/msmtp_registration.log

account hrother_hrother
host smtp.jfranken.de
port 465
protocol smtp
auth on
from hrother@hrother.org
user hrother
tls on
tls_starttls off
tls_trust_file /etc/ssl/certs/jfranken.crt
logfile ~/.tmp/msmtp_hrother.log

account default : gmail
